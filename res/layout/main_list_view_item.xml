<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/book_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
         >

        <ImageView
            android:id="@+id/book_cover_img"
            android:layout_width="@dimen/book_cover_small_w"
            android:layout_height="@dimen/book_cover_small_h"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/book_cover_m_img" />

        <LinearLayout
            android:id="@+id/book_tv_layout"
            android:layout_width="@dimen/main_list_item_txt_w"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/book_cover_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/book_cover_img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/book_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="20sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/main_list_item_txt_style"
                android:text="TextView" />

            <TextView
                android:id="@+id/grade_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				style="@style/main_list_item_txt_style"
                android:text="TextView" />

            <TextView
                android:id="@+id/press_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				style="@style/main_list_item_txt_style"
                android:text="TextView" />

            <TextView
                android:id="@+id/size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				style="@style/main_list_item_txt_style"
                android:text="TextView" />
        </LinearLayout>
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="120dp"
	    android:layout_height="140dp"
	    android:orientation="vertical"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
        android:layout_centerVertical="true" 
        android:gravity="right|center_vertical">
        <com.noahedu.resdownloadcenter.customview.DownProgessButton
        android:id="@+id/down_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	/>
        <TextView 
	    android:id="@+id/progress_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    />
	    
	</LinearLayout>



</RelativeLayout>